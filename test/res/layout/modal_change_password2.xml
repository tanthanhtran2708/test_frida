<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_marginTop="24.0dip" style="@style/PasswordChangeDialogEditTextLayout">
        <TextView android:text="@string/current_password" style="@style/PasswordChangeDialogFieldLabel" />
        <androidx.appcompat.widget.AppCompatEditText android:id="@id/current_password" style="@style/PasswordChangeDialogEditText">
            <requestFocus />
        </androidx.appcompat.widget.AppCompatEditText>
    </LinearLayout>
    <LinearLayout style="@style/PasswordChangeDialogEditTextLayout">
        <TextView android:text="@string/new_password" style="@style/PasswordChangeDialogFieldLabel" />
        <androidx.appcompat.widget.AppCompatEditText android:id="@id/new_password" style="@style/PasswordChangeDialogEditText" />
    </LinearLayout>
    <piuk.blockchain.android.ui.customviews.PasswordStrengthView android:id="@id/password_strength" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <LinearLayout style="@style/PasswordChangeDialogEditTextLayout">
        <TextView android:text="@string/confirm_password" style="@style/PasswordChangeDialogFieldLabel" />
        <androidx.appcompat.widget.AppCompatEditText android:id="@id/confirm_password" style="@style/PasswordChangeDialogEditText" />
    </LinearLayout>
</LinearLayout>